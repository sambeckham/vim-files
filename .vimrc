set nocompatible

call pathogen#infect()

set relativenumber
set expandtab
set shiftwidth=4
set softtabstop=4
set smartindent

set fileencoding=utf-8
set encoding=utf-8

set ignorecase
set smartcase
set incsearch

set noswapfile
set visualbell

syntax on
syntax enable
set background=dark
colorscheme solarized
